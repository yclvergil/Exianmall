<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:id="@+id/ly_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip" >

            <ImageView
                android:id="@+id/iv_return_login"
                android:layout_width="@dimen/dimen_48_dip"
                android:layout_height="@dimen/dimen_28_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:src="@drawable/ic_return"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_heads"
            android:layout_width="@dimen/dimen_100_dip"
            android:layout_height="@dimen/dimen_100_dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:src="@drawable/ic_login_centent" />

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:background="@color/white"
            android:paddingLeft="@dimen/dimen_30_dip"
            android:paddingRight="@dimen/dimen_30_dip" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/dimen_32_dip"
                android:layout_height="@dimen/dimen_32_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/ed_login_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:lines="1"
                android:text=""
                android:textColor="#323232"
                android:textColorHint="@color/yellow_hint"
                android:textSize="@dimen/dimen_10_sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2_dip"
            android:background="@drawable/ic_login_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:background="@color/white"
            android:paddingLeft="@dimen/dimen_30_dip"
            android:paddingRight="@dimen/dimen_30_dip" >

            <ImageView
                android:layout_width="@dimen/dimen_32_dip"
                android:layout_height="@dimen/dimen_32_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/ed_login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:lines="1"
                android:textColor="#323232"
                android:textColorHint="@color/yellow_hint"
                android:textSize="@dimen/dimen_10_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#323232"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/dimen_15_dip"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:gravity="center"
            android:text="忘记密码？"
            android:textColor="@color/orange"
            android:textSize="@dimen/dimen_10_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_to_register"
                android:layout_width="0dip"
                android:layout_height="@dimen/dimen_64_dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_30_dip"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:layout_weight="1"
                android:background="@drawable/ic_register" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dip"
                android:layout_height="@dimen/dimen_64_dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:layout_weight="1"
                android:background="@drawable/ic_login" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_splash1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_login_bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_70_dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        android:src="@drawable/ic_login_bottom" />

</RelativeLayout>