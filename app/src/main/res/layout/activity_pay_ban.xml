<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_20_dip"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
        android:paddingTop="@dimen/dimen_20_dip" >

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:text="卡号"
            android:textSize="@dimen/dimen_10_sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:numeric="integer"
            android:textSize="@dimen/dimen_10_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_20_dip"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
        android:paddingTop="@dimen/dimen_20_dip" >

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:text="开户行"
            android:textSize="@dimen/dimen_10_sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/dimen_10_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_20_dip"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
        android:paddingTop="@dimen/dimen_20_dip" >

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="@dimen/dimen_10_sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/dimen_10_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_20_dip"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
        android:paddingTop="@dimen/dimen_20_dip" >

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textSize="@dimen/dimen_10_sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="18"
            android:textSize="@dimen/dimen_10_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_20_dip"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
        android:paddingTop="@dimen/dimen_20_dip" >

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textSize="@dimen/dimen_10_sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="11"
            android:numeric="integer"
            android:textSize="@dimen/dimen_10_sp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:layout_marginRight="@dimen/dimen_10_dip"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:background="@drawable/radiobg_select"
        android:text="开通并支付"
        android:textColor="@color/orange" />

</LinearLayout>