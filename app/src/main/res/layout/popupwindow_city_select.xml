<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/rl_city_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_city_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:text="广东省"
            android:textColor="#e8a12e"
            android:textSize="@dimen/dimen_10_sp" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:text="确定"
            android:textColor="#e8a12e"
            android:textSize="@dimen/dimen_12_sp" />
    </RelativeLayout>

    <com.cnmobi.exianmall.widget.CityPicker
        android:id="@+id/citypicker1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_city_location"
        android:gravity="center" >
    </com.cnmobi.exianmall.widget.CityPicker>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_above="@+id/citypicker1"
        android:background="#999999" />

</RelativeLayout>