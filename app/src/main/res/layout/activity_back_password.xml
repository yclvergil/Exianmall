<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical" >

    <include layout="@layout/common_head_2" />

   <ImageView
        android:id="@+id/iv_heads"
        android:layout_width="@dimen/dimen_100_dip"
        android:layout_height="@dimen/dimen_100_dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:src="@drawable/logo" />
<ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:src="@drawable/ic_login_centent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginTop="@dimen/dimen_30_dip"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/dimen_32_dip"
            android:layout_height="@dimen/dimen_32_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/black_phone" />

        <EditText
            android:id="@+id/ed_backpwd_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:lines="1"
            android:textColor="#323232"
            android:textColorHint="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <ImageView
            android:id="@+id/iv_old_password_isTrue"
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_20_dip"
            android:src="@drawable/ic_right"
            android:visibility="gone" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_alignParentBottom="true"
            android:background="#323232" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_prcture_yzm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:layout_marginTop="@dimen/dimen_4_dip"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dip" >

            <ImageView
                android:layout_width="@dimen/dimen_32_dip"
                android:layout_height="@dimen/dimen_32_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_yzm" />

            <EditText
                android:id="@+id/ed_picture_yzm"
                android:layout_width="@dimen/dimen_200_dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入验证码"
                android:maxLength="4"
                android:textColorHint="#323232"
                android:textSize="@dimen/dimen_10_sp" />

            <ImageView
                android:id="@+id/iv_yzm_isTrue"
                android:layout_width="@dimen/dimen_30_dip"
                android:layout_height="@dimen/dimen_30_dip"
                android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_20_dip"
                android:src="@drawable/ic_right"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#323232" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dip" >

            <ImageView
                android:layout_width="@dimen/dimen_32_dip"
                android:layout_height="@dimen/dimen_32_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_yzm" />

            <ImageView
                android:id="@+id/iv_picture_yzm"
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="@dimen/dimen_35_dip"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/btn_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_picture_yzm"
                android:background="@null"
                android:layout_marginLeft="@dimen/dimen_5_dip"
                android:text="看不清，换一张"
                android:textSize="@dimen/dimen_8_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#323232" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginTop="@dimen/dimen_4_dip"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip" >

        <ImageView
            android:layout_width="@dimen/dimen_32_dip"
            android:layout_height="@dimen/dimen_32_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_yzm" />

        <EditText
            android:id="@+id/ed_backpwd_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入验证码"
            android:inputType="number"
            android:lines="1"
            android:textColor="#323232"
            android:textColorHint="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_alignParentBottom="true"
            android:background="#323232" />

        <com.cnmobi.exianmall.widget.BackPasswordTimeButton
            android:id="@+id/btn_get_yzm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="获取验证码"
            android:textColor="#e8a12e"
            android:textSize="@dimen/dimen_8_sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginTop="@dimen/dimen_4_dip"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip" >

        <ImageView
            android:layout_width="@dimen/dimen_32_dip"
            android:layout_height="@dimen/dimen_32_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/black_password" />

        <EditText
            android:id="@+id/ed_backpwd_newpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="@null"
            android:gravity="center"
            android:hint="请设置新密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="#323232"
            android:textColorHint="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_alignParentBottom="true"
            android:background="#323232" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginTop="@dimen/dimen_4_dip"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip" >

        <ImageView
            android:layout_width="@dimen/dimen_32_dip"
            android:layout_height="@dimen/dimen_32_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/black_password" />

        <EditText
            android:id="@+id/ed_backpwd_agpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="@null"
            android:gravity="center"
            android:hint="请重新确认密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="#323232"
            android:textColorHint="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_alignParentBottom="true"
            android:background="#323232" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_backpwd_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64_dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:layout_marginRight="@dimen/dimen_30_dip"
        android:layout_marginTop="@dimen/dimen_90_dip"
        android:background="@drawable/bg_yellow_kuangloginreg"
        android:text="确定修改"
        android:textColor="#e8a12e"
        android:textSize="@dimen/dimen_12_sp" />

</LinearLayout>