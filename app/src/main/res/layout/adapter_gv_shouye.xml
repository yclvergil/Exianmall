<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_10_dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_shouye_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/iv_product" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/tv_shouye_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄瓜"
                    android:textColor="#323232"
                    android:layout_marginLeft="@dimen/dimen_8_dip"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/dimen_12_sp" />

                <TextView
                    android:id="@+id/tv_shouye_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_3_dip"
                    android:layout_marginRight="@dimen/dimen_8_dip"
                    android:gravity="center"
                    android:text="¥100.00"
                    android:textColor="#e8a12e"
                      android:layout_alignParentRight="true"
                    android:textSize="@dimen/dimen_11_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="/"
                    android:textColor="#e8a12e"
                    android:textSize="@dimen/dimen_12_sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_shouye_product_unit_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="4"
                    android:maxLength="4"
                    android:singleLine="true"
                    android:text="箱"
                    android:textColor="#e8a12e"
                    android:textSize="@dimen/dimen_10_sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_shouye_product_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="箱"
                    android:textColor="#999999"
                    android:textSize="@dimen/dimen_11_sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_2_dip"
                android:gravity="center_horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    android:text="库存"
                    android:textColor="#999999"
                    android:textSize="@dimen/dimen_11_sp" />

                <TextView
                    android:id="@+id/tv_shouye_product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#999999"
                    android:textSize="@dimen/dimen_11_sp" />
            </LinearLayout>

            
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_shouye_car"
        android:layout_width="@dimen/dimen_24_dip"
        android:layout_height="@dimen/dimen_24_dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/iv_shouye_car_nm" 
        android:visibility="gone"/>

</RelativeLayout>