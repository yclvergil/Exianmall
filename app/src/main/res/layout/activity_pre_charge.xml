<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edt_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="@dimen/dimen_20_dip"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingTop="@dimen/dimen_20_dip"
        android:inputType="numberDecimal"
        android:hint="请输入你想要充值的金额"
        android:textSize="@dimen/dimen_10_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dip"
        android:text="选择充值方式"
        android:textSize="@dimen/dimen_9_sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:layout_marginRight="@dimen/dimen_10_dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_zhifubao"
            android:drawablePadding="@dimen/dimen_10_dip"
            android:gravity="center"
            android:text="支付宝支付" />

        <RadioButton
            android:id="@+id/radio_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_margin="@dimen/dimen_10_dip"
        android:background="#E6E6E6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:layout_marginRight="@dimen/dimen_10_dip"
        android:visibility="visible" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_weixin"
            android:drawablePadding="@dimen/dimen_10_dip"
            android:gravity="center"
            android:text="微信支付" />

        <RadioButton
            android:id="@+id/radio_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_margin="@dimen/dimen_10_dip"
        android:background="#E6E6E6" 
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dip"
        android:text="注意：\n1、即冲即用~\n2、位避免在购买商品时无法使用余额抵扣，请您在购买商品之前进行充值哦~\n3、充值将获得随机红包返利：返利率1%-10%。"
         />

    <LinearLayout
        android:id="@+id/ly_pre_charge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_100_dip"
        android:background="@drawable/bg_wanshang"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/dimen_24_dip"
            android:layout_height="@dimen/dimen_24_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/ic_topup" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去充值"
            android:textColor="#e8a12e"
            android:textSize="@dimen/dimen_10_sp" />
    </LinearLayout>

</LinearLayout>