<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#707C7C7C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" 
         android:layout_marginTop="@dimen/dimen_250_dip">

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10_dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_black_bank" 
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10_dip"/>

            <TextView
                android:id="@+id/tv_title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="输入支付密码"
                android:textSize="@dimen/dimen_11_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_below="@+id/tv_title_content"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:background="#F0F0F0" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75_dip"
            android:layout_below="@+id/linearLayout1"
            android:layout_margin="@dimen/dimen_10_dip"
            android:background="@drawable/shape_rectangle_paypassword_gray" >

            <TextView
                android:id="@+id/pay_box1"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="@dimen/dimen_1_dip"
                android:layout_height="match_parent"
                android:background="#A1A1A1" />

            <TextView
                android:id="@+id/pay_box2"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="@dimen/dimen_1_dip"
                android:layout_height="match_parent"
                android:background="#A1A1A1" />

            <TextView
                android:id="@+id/pay_box3"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="@dimen/dimen_1_dip"
                android:layout_height="match_parent"
                android:background="#A1A1A1" />

            <TextView
                android:id="@+id/pay_box4"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="@dimen/dimen_1_dip"
                android:layout_height="match_parent"
                android:background="#A1A1A1" />

            <TextView
                android:id="@+id/pay_box5"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="@dimen/dimen_1_dip"
                android:layout_height="match_parent"
                android:background="#A1A1A1" />

            <TextView
                android:id="@+id/pay_box6"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_300_dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#F0F0F0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/pay_keyboard_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_one_selector" />

                <ImageView
                    android:id="@+id/pay_keyboard_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_1_dip"
                    android:layout_marginLeft="@dimen/dimen_1_dip"
                    android:layout_marginRight="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_two_selector" />

                <ImageView
                    android:id="@+id/pay_keyboard_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_three_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/pay_keyboard_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_four_selector" />

                <ImageView
                    android:id="@+id/pay_keyboard_five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_1_dip"
                    android:layout_marginLeft="@dimen/dimen_1_dip"
                    android:layout_marginRight="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_five_selector" />

                <ImageView
                    android:id="@+id/pay_keyboard_six"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_sex_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/pay_keyboard_seven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_seven_selector" />

                <ImageView
                    android:id="@+id/pay_keyboard_eight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_1_dip"
                    android:layout_marginLeft="@dimen/dimen_1_dip"
                    android:layout_marginRight="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_eight_selector" />

                <ImageView
                    android:id="@+id/pay_keyboard_nine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_nine_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/pay_keyboard_symbol"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_symbol" />

                <ImageView
                    android:id="@+id/pay_keyboard_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_1_dip"
                    android:layout_marginRight="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_zero_selector" />

                <ImageView
                    android:id="@+id/pay_keyboard_del"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_del_selector" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>