<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    tools:context=".mine.activity.MerchantMineAdressManageActivity" >

    <include layout="@layout/common_head_2" />

    <ImageView
        android:id="@+id/iv_heads"
        android:layout_width="@dimen/dimen_100_dip"
        android:layout_height="@dimen/dimen_100_dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:src="@drawable/logo" />
<ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:src="@drawable/ic_login_centent" 
            android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/rl_stallsname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginTop="@dimen/dimen_30_dip"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip" >

        <ImageView
            android:layout_width="@dimen/dimen_32_dip"
            android:layout_height="@dimen/dimen_32_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_3_dip"
            android:src="@drawable/ic_info_stalls" />

        <EditText
            android:id="@+id/ed_stallsname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入您的档口名称"
            android:lines="1"
            android:textColor="#323232"
            android:textColorHint="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_alignParentBottom="true"
            android:background="#323232" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip" >

        <ImageView
            android:layout_width="@dimen/dimen_32_dip"
            android:layout_height="@dimen/dimen_32_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_info_name" />

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入您的姓名"
            android:lines="1"
            android:textColor="#323232"
            android:textColorHint="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_alignParentBottom="true"
            android:background="#323232" />
    </RelativeLayout>

    <View
        android:id="@+id/view_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginTop="@dimen/dimen_40_dip"
        android:background="#00ffffff"
        />

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip" >

        <ImageView
            android:layout_width="@dimen/dimen_32_dip"
            android:layout_height="@dimen/dimen_32_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/black_password" />

        <EditText
            android:id="@+id/ed_register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="@null"
            android:gravity="center"
            android:hint="请设置密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="#323232"
            android:textColorHint="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_alignParentBottom="true"
            android:background="#323232" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_select_diqu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip" >

        <ImageView
            android:layout_width="@dimen/dimen_32_dip"
            android:layout_height="@dimen/dimen_32_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/black_password" />

        <EditText
            android:id="@+id/ed_register_password_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="@null"
            android:gravity="center"
            android:hint="重新确认密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="#323232"
            android:textColorHint="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_alignParentBottom="true"
            android:background="#323232" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64_dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/dimen_60_dip"
        android:background="@drawable/bg_yellow_kuangloginreg"
        android:text="立即注册"
        android:textColor="#e8a12e"
        android:textSize="@dimen/dimen_12_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:layout_marginRight="@dimen/dimen_30_dip"
        android:layout_marginTop="@dimen/dimen_60_dip"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
        android:weightSum="8.5" >

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="#e8a12e" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_agree"
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/dimen_5_dip"
                android:paddingLeft="@dimen/dimen_5_dip"
                android:paddingTop="@dimen/dimen_5_dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="同意"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_8_sp" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="《e鲜商城用户注册协议》"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_8_sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="#e8a12e" />
    </LinearLayout>

</LinearLayout>