<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_10_dip"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_product_1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄瓜"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_2_dip"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_11_sp" />

            <TextView
                android:id="@+id/tv_type_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_2_dip"
                android:gravity="center"
                android:text="¥100.00"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_10_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="/"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_12_sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_shouye_product_unit_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_15_dip"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:maxLength="4"
                android:singleLine="true"
                android:text="箱"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_10_sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_shouye_product_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="箱"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_11_sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>