<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_20_dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人："
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <TextView
            android:id="@+id/tv_consigner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李向东"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:text="手机号码："
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <TextView
            android:id="@+id/tv_consigner_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13578541565"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_5_dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址："
            android:textColor="#999999"
            android:textSize="@dimen/dimen_9_sp" />

        <TextView
            android:id="@+id/tv_consigner_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东省广州市天河区棠下村菜市场"
            android:textColor="#999999"
            android:textSize="@dimen/dimen_9_sp" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:background="#F0F0F0" />

    <Button
        android:id="@+id/btn_alter_consigner_adress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_400_dip"
        android:background="@drawable/bg_wanshang"
        android:text="申请修改收货地址"
        android:textColor="#e8a12e" />

</LinearLayout>