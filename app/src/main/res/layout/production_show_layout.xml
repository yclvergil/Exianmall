<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_production_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_71_dip" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_71_dip"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="@dimen/dimen_50_dip"
            android:padding="@dimen/dimen_11_dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/return1" />

        <TextView
            android:id="@+id/tv_productionshow_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_13_sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_13_sp" />

        <TextView
            android:id="@+id/tv_productionshow_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_13_sp" />
    </LinearLayout>

</RelativeLayout>