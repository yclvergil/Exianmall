<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2"
        android:background="@drawable/bg_mine"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip" >

            <LinearLayout
                android:id="@+id/ly_common_head_return"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_common_head1_return"
                    android:layout_width="@dimen/dimen_28_dip"
                    android:layout_height="@dimen/dimen_28_dip"
                    android:src="@drawable/ic_return" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="返回"
                    android:textColor="#e8a12e"
                    android:textSize="@dimen/dimen_8_sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_12_sp" />

            <ImageView
                android:id="@+id/iv_mine_edit"
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:src="@drawable/iv_yellow_edit" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="@dimen/dimen_100_dip"
                android:src="@drawable/dailogo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8_dip"
                    android:text="e鲜商城"
                    android:textColor="#323232"
                    android:textSize="@dimen/dimen_10_sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1868****432"
                    android:textColor="#e8a12e" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip"
        android:weightSum="7" >

        <RelativeLayout
            android:id="@+id/rl_mine_jifen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3"
               android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/jifen" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3"
                android:text="积分"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_10_sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_black_arrows"
                android:padding="@dimen/dimen_2_dip" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#ffe48c" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mine_coupon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3_1"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/coupon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3_1"
                android:text="优惠券"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_10_sp" />

            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_black_arrows" 
                android:padding="@dimen/dimen_2_dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#ffe48c" />

            

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mine_wallet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3_2"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3_2"
                android:text="钱包"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_10_sp" />

            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_black_arrows" 
                android:padding="@dimen/dimen_2_dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#ffe48c" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mine_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3_3"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3_3"
                android:text="消息"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_10_sp" />

            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_black_arrows" 
                android:padding="@dimen/dimen_2_dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#ffe48c" />
        </RelativeLayout>

        <RelativeLayout
             android:id="@+id/rl_mine_history_order"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3_4"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/history_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3_4"
                android:text="历史订单"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_10_sp" />

            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_black_arrows" 
                android:padding="@dimen/dimen_2_dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#ffe48c" />
        </RelativeLayout>

        <RelativeLayout
             android:id="@+id/rl_mine_adress_manage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3_5"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3_5"
                android:text="地址管理"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_10_sp" />

            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_black_arrows" 
                android:padding="@dimen/dimen_2_dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#ffe48c" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mine_set"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3_6"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/set" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3_6"
                android:text="设置"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_10_sp" />

            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_black_arrows"
                android:padding="@dimen/dimen_2_dip"  />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#ffe48c" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_mine_wanshang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_15_dip"
        android:background="@drawable/bg_wanshang"
        android:gravity="center" 
        android:layout_weight="0.8"
        >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/dimen_24_dip"
            android:layout_height="@dimen/dimen_24_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/iv_yellow_edit" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完善我的资料" 
            android:textSize="@dimen/dimen_10_sp"
            android:textColor="#e8a12e"/>
    </LinearLayout>

</LinearLayout>