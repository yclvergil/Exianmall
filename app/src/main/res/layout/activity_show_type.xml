<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffe48c"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_common_head_3_return"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/danhuang"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        
        <LinearLayout
            android:id="@+id/ly_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/dimen_50_dip"
                android:layout_height="@dimen/dimen_50_dip"
                android:padding="@dimen/dimen_11_dip"
                android:src="@drawable/ic_return" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_24_dip" />
        </LinearLayout>
        
        


        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="@dimen/dimen_330_dip"
            android:layout_height="@dimen/dimen_45_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:background="@drawable/bg_search"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:src="@drawable/iv_search" />

            <TextView
                android:id="@+id/tv_second_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_5_dip"
                android:layout_toRightOf="@id/iv_search"
                android:gravity="center_vertical"
                android:text="请输入搜索关键字"
                android:textColor="@color/yellow_hint"
                android:textSize="@dimen/dimen_12_sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10_dip" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/activity_show_type_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产地"
                android:textSize="@dimen/dimen_12_sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sort_down" />
        </LinearLayout>

        <LinearLayout
             android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/activity_show_type_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="种类"
                android:textSize="@dimen/dimen_12_sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sort_down" />
        </LinearLayout>

        <LinearLayout
             android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/activity_show_type_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="价格"
                android:textSize="@dimen/dimen_12_sp" />

            <ImageView
                android:id="@+id/iv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sort_down" />
        </LinearLayout>

        <LinearLayout
             android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/activity_show_type_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="规格"
                android:textSize="@dimen/dimen_12_sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sort_down" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content" >

        <GridView
            android:id="@+id/activity_show_type_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_10_dip"
            android:gravity="center"
            android:horizontalSpacing="@dimen/dimen_10_dip"
            android:numColumns="2"
            android:verticalSpacing="@dimen/dimen_10_dip" >
        </GridView>

        <View
            android:id="@+id/activity_show_type_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e0313131"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/activity_show_type_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="@color/hui" />

            <ListView
                android:id="@+id/activity_show_type_lv_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone" >
            </ListView>
            <ListView
                android:id="@+id/activity_show_type_lv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" 
                android:visibility="gone">
            </ListView>
            <ListView
                android:id="@+id/activity_show_type_lv_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone" >
            </ListView>
            <ListView
                android:id="@+id/activity_show_type_lv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone" >
            </ListView>
        </LinearLayout>
