<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="12dp" >

    <TextView
        android:id="@+id/tv_product"
        android:layout_width="@dimen/dimen_60_dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxEms="4"
        android:singleLine="true"
        android:text="大白菜大白菜大白菜大白菜"
        android:textSize="@dimen/dimen_9_sp" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="@dimen/dimen_120_dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_toRightOf="@id/tv_product"
        android:text="级别：A级"
        android:textSize="@dimen/dimen_10_sp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:layout_toRightOf="@id/tv_level"
        android:background="@drawable/radiobg_nor"
        android:padding="@dimen/dimen_3_dip"
        android:text="x10"
        android:textSize="@dimen/dimen_10_sp" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:isIndicator="true"
        android:maxHeight="18dp"
        android:minHeight="18dp"
        android:numStars="5"
        android:progressDrawable="@drawable/room_rating_bar"
        android:rating="4"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_select_evaluate"
        android:layout_width="@dimen/dimen_110_dip"
        android:layout_height="@dimen/dimen_40_dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_yellow"
        android:text="查看评价"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_9_sp" />

</RelativeLayout>