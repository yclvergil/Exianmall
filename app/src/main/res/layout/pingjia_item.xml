<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/pingjia_iv"
                android:layout_width="@dimen/dimen_36_dip"
                android:layout_height="@dimen/dimen_36_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:src="@drawable/icon_touxiang"
                android:visibility="gone" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8_dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pingjia_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10_dip"
                android:text="不错"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:textColor="#323333"
                android:textSize="@dimen/dimen_10_sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10_dip" >

                <RatingBar
                    android:id="@+id/room_ratingbar"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_25_dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:visibility="gone" >
                </RatingBar>

                <TextView
                    android:id="@+id/pingjia_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_18_dip"
                    android:layout_marginRight="@dimen/dimen_10_dip"
                    android:layout_marginTop="@dimen/dimen_4_dip"
                    android:layout_toLeftOf="@+id/pingjia_time"
                    android:text="沈万山"
                    android:textColor="#969796"
                    android:textSize="@dimen/dimen_8_sp" />

                <TextView
                    android:id="@+id/pingjia_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10_dip"
                    android:text="时间"
                    android:textColor="#969796"
                    android:textSize="@dimen/dimen_8_sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:layout_marginRight="@dimen/dimen_10_dip"
        android:layout_marginTop="@dimen/dimen_2_dip"
        android:background="@color/gray" />

</LinearLayout>