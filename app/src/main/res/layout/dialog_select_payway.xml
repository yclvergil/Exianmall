<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_gravity="center"
        android:background="@color/danhuang"
        android:gravity="center"
        android:text="请选择付款方式"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_12_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dimen_15_dip" >

        <LinearLayout
            android:id="@+id/ly_zhifubao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_60_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:src="@drawable/ic_zhifubao" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:text="支付宝" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_weixin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/dimen_60_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:src="@drawable/ic_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:text="微信" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_wallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/dimen_60_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:src="@drawable/ic_wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:text="钱包" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>