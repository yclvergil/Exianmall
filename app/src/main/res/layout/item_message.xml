<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10_dip" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dimen_60_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_toRightOf="@id/iv_head"
            android:text="系统消息"
            android:textColor="@color/orange"
            android:textSize="@dimen/dimen_11_sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:layout_toRightOf="@id/iv_head"
            android:text="亲爱的下了解对方拉"
            android:textSize="@dimen/dimen_11_sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/right_gray_arrows" />

        <ImageView
            android:id="@+id/iv_messagelist_red_point"
            android:layout_width="@dimen/dimen_10_dip"
            android:layout_height="@dimen/dimen_10_dip"
            android:layout_alignTop="@+id/iv_head"
            android:layout_toRightOf="@+id/iv_head"
            android:src="@drawable/ic_red_point" 
            android:layout_marginLeft="-14dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#D81500" >

        <ImageView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/shopcar_dele"
           />
    </RelativeLayout>

</LinearLayout>