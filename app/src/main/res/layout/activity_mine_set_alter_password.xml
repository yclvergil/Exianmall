<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

<!--     <include layout="@layout/common_head_1" /> -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/dimen_100_dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="原始密码"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <EditText
            android:id="@+id/ed_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_toLeftOf="@+id/iv_old_password_isTrue"
            android:layout_toRightOf="@+id/textView1"
            android:background="@null"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:text=""
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <!--
             <ImageView
            android:id="@+id/iv_old_password_isTrue"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right" 
            android:layout_marginRight="@dimen/dimen_20_dip"/>
        -->

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:background="#F0F0F0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/dimen_100_dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="新  密  码"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <EditText
            android:id="@+id/ed_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_toRightOf="@+id/textView2"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:text=""
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <!--
             <ImageView
            android:id="@+id/iv_new_password_isPass"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right" 
            android:layout_marginRight="@dimen/dimen_20_dip"/>
        -->

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:background="#F0F0F0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/dimen_100_dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="确定密码"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <EditText
            android:id="@+id/ed_new_password_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_toRightOf="@+id/textView3"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:text=""
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <!--
             <ImageView
            android:id="@+id/iv_new_password_isTrue"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_error" 
            android:layout_marginRight="@dimen/dimen_20_dip"/>
        -->

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#F0F0F0" />

    <Button
        android:id="@+id/btn_sure_alter_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginBottom="@dimen/dimen_100_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_100_dip"
        android:background="@drawable/bg_wanshang"
        android:text="确定修改"
        android:textColor="#e8a12e" />

</LinearLayout>