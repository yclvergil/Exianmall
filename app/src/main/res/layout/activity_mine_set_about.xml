<?xml version="1.0" encoding="utf-8"?>
<com.cnmobi.exianmall.widget.MyScrolorview xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:padding="@dimen/dimen_10_dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dip" 
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_about_logo"
                android:layout_width="@dimen/dimen_150_dip"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_about_e" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_11_sp"
                android:maxLines="1"
                android:gravity="center"/>

        </LinearLayout>
      <View 
          android:layout_width="match_parent"
          android:layout_height="@dimen/dimen_1_dip"
          android:layout_marginLeft="@dimen/dimen_10_dip"
          android:layout_marginRight="@dimen/dimen_10_dip"
          android:background="@color/black"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_about_exian"
            android:visibility="gone" />

        <com.cnmobi.exianmall.widget.MyListView
            android:id="@+id/lv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null" 
            android:layout_marginTop="@dimen/dimen_20_dip">
        </com.cnmobi.exianmall.widget.MyListView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:text="企业地址"
            android:textSize="@dimen/dimen_11_sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:textColor="@color/graytext"
            android:textSize="@dimen/dimen_10_sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:textColor="@color/graytext"
            android:textSize="@dimen/dimen_10_sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:textColor="@color/graytext"
            android:textSize="@dimen/dimen_10_sp" />
    </LinearLayout>

</com.cnmobi.exianmall.widget.MyScrolorview>