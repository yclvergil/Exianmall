    <RelativeLayout
        android:id="@+id/contentPager2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <!-- <com.example.dateviewtest.NoScrollViewPager
