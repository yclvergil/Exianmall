<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2"
        android:background="@drawable/bg_mine"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip" >

            <LinearLayout
                android:id="@+id/ly_common_head_return"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_common_head1_return"
                    android:layout_width="@dimen/dimen_28_dip"
                    android:layout_height="@dimen/dimen_28_dip"
                    android:src="@drawable/ic_yellow_return" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="返回"
                    android:textColor="#e8a12e"
                    android:textSize="@dimen/dimen_12_sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的资料"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_15_sp" />

            <TextView
                android:id="@+id/tv_mine_information_commit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_8_dip"
                android:paddingRight="@dimen/dimen_8_dip"
                android:text="提交"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_12_sp" />
        </RelativeLayout>
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center" >

            <com.cnmobi.exianmall.widget.RoundImageView
                android:id="@+id/iv_mine_head"
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="@dimen/dimen_100_dip"
                android:src="@drawable/dailogo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8_dip"
                    android:text="e鲜商城"
                    android:textColor="#323232"
                    android:textSize="@dimen/dimen_12_sp" />

                <TextView
                    android:id="@+id/tv_head_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1868****432"
                     android:textSize="@dimen/dimen_12_sp"
                    android:textColor="#e8a12e" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip"
        android:weightSum="7" >

        <RelativeLayout
            android:id="@+id/rl_mine_stallsname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_info_stalls" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3"
                android:text="档口名称"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_11_sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_2_dip"
                android:src="@drawable/right_black_arrows" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:text="(必填)"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_6_sp" />

            <TextView
                android:id="@+id/tv_mine_stallsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_toRightOf="@+id/TextView1"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_11_sp" 
                android:text="上社新街市"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mine_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3_1"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_info_name" />

            <TextView
                android:id="@+id/TextView2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3_1"
                android:text="姓名"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_11_sp" />

            <TextView
                android:id="@+id/tv_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_toRightOf="@+id/TextView2_1"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_11_sp" 
                android:text="李先生"/>

            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_2_dip"
                android:src="@drawable/right_black_arrows" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#F0F0F0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mine_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3_2"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_info_phone" />

            <TextView
                android:id="@+id/TextView3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_toRightOf="@+id/imageView3_2"
                android:text="手机号码"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_11_sp" />

            <TextView
                android:id="@+id/tv_mine_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_toRightOf="@+id/TextView3_1"
                android:textColor="#323232"
                android:textSize="@dimen/dimen_11_sp" 
                android:text="186****9432"/>

            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_24_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_2_dip"
                android:src="@drawable/right_black_arrows" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:layout_alignParentBottom="true"
                android:background="#F0F0F0" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>