<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:background="#ffffff"
    android:gravity="center">

     <RelativeLayout
         android:id="@+id/rl_city_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40_dip" 
            android:orientation="horizontal">

         <TextView
             android:id="@+id/tv_cancel"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:text="取消"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/dimen_10_dip" 
             android:textColor="#999999"
             android:textSize="15sp"/>

        
<TextView
             android:id="@+id/tv_bank"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="银行1"
             android:layout_centerInParent="true"
             android:textColor="#e8a12e"
             android:textSize="15sp"/>
         

         <TextView
             android:id="@+id/tv_ok"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="确定" 
             android:layout_centerVertical="true" 
             android:layout_marginRight="@dimen/dimen_10_dip"
             android:textColor="#e8a12e"
             android:textSize="15sp"/>
         
        </RelativeLayout>
        
     
    <com.cnmobi.exianmall.widget.BankPicker
        android:id="@+id/picker_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_city_location"
        android:gravity="center" 
        >

    </com.cnmobi.exianmall.widget.BankPicker>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_above="@+id/citypicker1"
        android:background="#999999"/>

</RelativeLayout>