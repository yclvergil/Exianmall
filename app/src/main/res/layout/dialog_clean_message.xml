<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dip"
        android:text="亲爱的用户,您好！您确定要清空所有的消息吗？"
        android:textColor="#323232"
        android:gravity="left"
        android:textSize="@dimen/dimen_11_sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_below="@+id/tv_content"
        android:layout_centerHorizontal="true"
        android:background="#F0F0F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1" >

        <Button
            android:id="@+id/btn_clean_message_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50_dip"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="取消"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_12_sp" />

        <View
            android:layout_width="@dimen/dimen_1_dip"
            android:layout_height="match_parent"
            android:background="#F0F0F0" />

        <Button
            android:id="@+id/btn_clean_message_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50_dip"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="确定"
            android:textColor="#e8a12e"
            android:textSize="@dimen/dimen_12_sp" />
    </LinearLayout>

</RelativeLayout>