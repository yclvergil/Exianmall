<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_black_transparent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" 
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_106_dip"
            android:background="@drawable/bg_popupwindow_head"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_from_takephoto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="拍照"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_12_sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/tv_from_photoalbum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="从相册选择"
                android:textColor="#e8a12e"
                android:textSize="@dimen/dimen_12_sp" />
        </LinearLayout>
        
         <TextView
                android:id="@+id/tv_popupwindow_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_53_dip"
                android:gravity="center"
                android:text="取消"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_12_sp"
                android:background="@drawable/bg_popupwindow_cancel" 
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:layout_marginBottom="@dimen/dimen_15_dip"/>
        
    </LinearLayout>

</RelativeLayout>