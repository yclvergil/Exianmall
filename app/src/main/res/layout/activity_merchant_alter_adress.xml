<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:text="旧的产地信息："
        android:textColor="#323232"
        android:textSize="@dimen/dimen_10_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_20_dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

        <TextView
            android:id="@+id/tv_consigner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李向东"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_10_sp" />

   
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_5_dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产地地址："
            android:textColor="#999999"
            android:textSize="@dimen/dimen_9_sp" />

        <TextView
            android:id="@+id/tv_consigner_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东省广州市天河区棠下村菜市场"
            android:textColor="#999999"
            android:textSize="@dimen/dimen_9_sp" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:background="#F0F0F0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:text="新的的产地信息："
        android:textColor="#323232"
        android:textSize="@dimen/dimen_10_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:text="收货人姓名 "
            android:textColor="#323232"
            android:textSize="@dimen/dimen_9_sp" />

        <TextView
            android:id="@+id/tv_consigner_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:textColor="@color/graytext"
            android:textSize="@dimen/dimen_9_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#F0F0F0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#F0F0F0" />

    <RelativeLayout
        android:id="@+id/rl_alteradress_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/tv_dq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:text="地区             "
            android:textColor="#323232"
            android:textSize="@dimen/dimen_9_sp" />

        <TextView
            android:id="@+id/tv_alter_selectadress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_9_sp"
            android:layout_toRightOf="@+id/tv_dq" 
            android:layout_marginLeft="@dimen/dimen_30_dip"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_24_dip"
            android:layout_height="@dimen/dimen_24_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15_dip"
            android:padding="@dimen/dimen_2_dip"
            android:src="@drawable/right_black_arrows" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#F0F0F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:text="详细地址     "
            android:textColor="#323232"
            android:textSize="@dimen/dimen_9_sp" />

        <EditText
            android:id="@+id/ed_new_consigner_detailadress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:background="@null"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_9_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#F0F0F0" />

    <Button
        android:id="@+id/btn_commit_alter_adress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_100_dip"
        android:background="@drawable/bg_wanshang"
        android:text="提交申请"
        android:textSize="@dimen/dimen_10_sp"     
        android:textColor="#e8a12e" />

</LinearLayout>